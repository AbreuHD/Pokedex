@model List<Application.ViewModels.PokemonViewModel>
@{
    ViewData["Title"] = "Pokemons";
}

<div class="container">
    
    <div class="card text-center">
      <div class="card-body">

        <p>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseRegion" aria-expanded="false" aria-controls="collapseRegion">
                Filtrar por Region
            </button>
            <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTipo" aria-expanded="false" aria-controls="collapseTipo">
                Filtrar por Tipo
            </button>
        </p>


        <div class="collapse" id="collapseRegion">
            <div class="card card-body">
                Vamoh a calmarno.
            </div>
        </div>

        <div class="collapse" id="collapseTipo">
            <div class="card card-body">
                vamoh a calentalno.
            </div>
        </div>

      </div>
    </div>

    <br />

    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        @if(Model == null || Model.Count == 0)
        {
            <h2>No Hay Pokemosn</h2>
        }
        else
        {
            @foreach(Application.ViewModels.PokemonViewModel item in Model)
            {
                <div class="col-md-4">
                  <div class="card shadow-sm">
                    <img src="@item.ImgUrl" class="card-img-top" alt="@item.Name imagen" width="100%" height="225">
                    <div class="card-body">
                      <p class="card-text">Un Meme simple pero poderoso.
                          <br/>
                          Tipo = @item.TipoId
                          Region = @item.RegionId
                      </p>
                    </div>
                  </div>
                </div>    
            }
        }
      </div>
    </div>