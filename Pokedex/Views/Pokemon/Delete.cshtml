@model Application.ViewModels.PokemonViewModel
@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Estas Seguro que desea eliminar el Pokemon?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Pokemon" asp-action="DeletePost">
                    <input type= "hidden" asp-for="Id"/>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Pokemon" asp-action="PokemonForm" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>

    </div>
</div>

