@model Application.ViewModels.RegionViewModel;
@{
    ViewData["Title"] = "Eliminar Region";
}


<div class="row">
    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Estas Seguro que desea eliminar la Region?</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Region" asp-action="DeletePost">
                    <input type= "hidden" asp-for="Id"/>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Region" asp-action="RegionForm" class="btn btn-warning">Cancelar</a>
                </form>
            </div>
        </div>

    </div>
</div>



